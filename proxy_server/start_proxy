#!/bin/sh

# Get the port from Heroku
PORT=${PORT:-8000}

# Start configurable-http-proxy with both proxy and API on same port
configurable-http-proxy \
    --port $PORT \
    --api-port $PORT \
    --api-prefix /api \
    --no-include-prefix \
    --default-target http://127.0.0.1:$PORT \
    --error-target http://127.0.0.1:$PORT/hub/error \
    --log-level debug

chmod +x start_proxy
